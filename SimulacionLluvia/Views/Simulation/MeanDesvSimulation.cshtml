@model Distribution
@{
    ViewBag.Title = "Rain Simulation";
}
           
@if (Model != null)
{
    <div id="outputDiv" >

    <h2>Rain Simulation</h2>

    <h3 style="color: Blue">Distribution</h3>

        <div style="width: 100%; overflow-x: scroll; overflow-y: hidden">
            <table class="newsTable">
                @for (int i = 0; i < Model.Ranks.Length; i++)
                {    
                    <tr>
                        <td style="background-color: #D0F5A9">
                            @Model.Ranks[i].LowerLimit - @Model.Ranks[i].UpperLimit
                        </td>
                        @foreach (double item in Model.Ranks[i].Values)
                        {                
                            <td>
                                <span style="background-color: Gray">@item</span>
                            </td>
                        }
                    </tr>    
                }
            </table>
        </div>

        <h3 style="color: Blue">
            Values in order of appearance</h3>

        <table>
            @foreach (var item in ViewBag.ValuesInOrder)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>
        <div>
            @Html.Partial("_Chart", (List<double>)ViewBag.ValuesInOrder);
        </div>
    </div>
}